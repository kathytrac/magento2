<?xml version="1.0"?>

<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
	<default>
		<supercategories>
			<general>
				<isactive>1</isactive>
				<display_title>1</display_title>
				<title>SM Super Categories</title>
				<target>_blank</target>
			</general>
			<source_options>
				<product_category></product_category>
				<product_order_by>name</product_order_by>
				<field_preload>name</field_preload>
				<child_category_products>1</child_category_products>
				<max_depth>1</max_depth>
				<product_featured>0</product_featured>
				<product_order_dir>ASC</product_order_dir>
				<product_limitation>5</product_limitation>
			</source_options>
			
			<cat_options>
				<cat_title_maxlength>25</cat_title_maxlength>				
                <imgcfgcat_from_category_description>1</imgcfgcat_from_category_description>
                <imgcfgcat_function>1</imgcfgcat_function>
                <imgcfgcat_width>200</imgcfgcat_width>
                <imgcfgcat_height>200</imgcfgcat_height>
                <imgcfgcat_background>FFFFFF</imgcfgcat_background>
                <imgcfgcat_placeholder>sm/supercategories/images/nophoto.jpg</imgcfgcat_placeholder>
                <imgcfgcat_from_category_image>1</imgcfgcat_from_category_image>
                <imgcfgcat_from_category_thumbnail>1</imgcfgcat_from_category_thumbnail>
                <imgcfgcat_from_category_description>1</imgcfgcat_from_category_description>				
                <center>0</center>
                <nav>1</nav>
                <loop>1</loop>
                <margin>5</margin>
                <slideBy>1</slideBy>
                <autoplay>1</autoplay>
                <autoplayHoverPause>1</autoplayHoverPause>
                <autoplaySpeed>1000</autoplaySpeed>
                <navSpeed>1000</navSpeed>
                <startPosition>1</startPosition>
                <mouseDrag>1</mouseDrag>
                <touchDrag>1</touchDrag>
				<nb_column1>6</nb_column1>
				<nb_column2>5</nb_column2>
				<nb_column3>4</nb_column3>
				<nb_column4>3</nb_column4>
			</cat_options>
			
			<product_options>
				<nbi_column1>4</nbi_column1>
				<nbi_column2>3</nbi_column2>
				<nbi_column3>2</nbi_column3>
				<nbi_column4>1</nbi_column4>
				<nbi_type_show>loadmore</nbi_type_show>
				<nbi_rows>1</nbi_rows>
				<imgcfgcat_from_product_image>1</imgcfgcat_from_product_image>
				<imgcfgcat_from_product_description>1</imgcfgcat_from_product_description>
				<imgcfgcat_replacement>1</imgcfgcat_replacement>
				<imgcfgcat_order>product_image,product_description</imgcfgcat_order>
				<product_image_display>1</product_image_display>
				<product_image_width>200</product_image_width>
				<product_image_height>200</product_image_height>
				<product_title_display>1</product_title_display>
				<product_title_maxlength>25</product_title_maxlength>
				<product_description_display>1</product_description_display>
				<product_description_maxlength>150</product_description_maxlength>
				<product_price_display>1</product_price_display>
				<product_reviews_count>1</product_reviews_count>
				<product_addcart_display>1</product_addcart_display>
				<product_addwishlist_display>1</product_addwishlist_display>
				<product_addcompare_display>1</product_addcompare_display>
				<product_readmore_display>1</product_readmore_display>
				<product_readmore_text>Details</product_readmore_text>
				<product_autoplay>1</product_autoplay>
				<product_autoplayHoverPause>1</product_autoplayHoverPause>
				<product_autoplaySpeed>2000</product_autoplaySpeed>
				<product_navSpeed>2000</product_navSpeed>
				<product_intervalTimeout>5000</product_intervalTimeout>
				<product_nav>1</product_nav>
				<product_loop>1</product_loop>
				<product_mouseDrag>1</product_mouseDrag>
				<product_touchDrag>1</product_touchDrag>
				<product_effect>fadeIn</product_effect>
				<product_duration>600</product_duration>
				<product_delay>300</product_delay>
			</product_options>
			<advanced>
				<pretext></pretext>
				<posttext></posttext>
				<use_cache>1</use_cache>
				<cache_time>3600</cache_time>
			</advanced>
		</supercategories>
	</default>
</config>